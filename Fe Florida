<body ondragover="allowDrop(event)" ondrop="drop(event)">
  <div class="drop-zone" id="dropZone">
    Drop FE Script Here
  </div>
  
  <div class="draggable-container">
    <div class="draggable-item" id="FE_BestHatFling" draggable="true" ondragstart="drag(event)">
      Best Hat Fling
    </div>
    <div class="draggable-item" id="FE_InvisibleFling" draggable="true" ondragstart="drag(event)">
      Invisible Fling
    </div>
    <div class="draggable-item" id="FE_FlyScript" draggable="true" ondragstart="drag(event)">
      Fly Script
    </div>
  </div>
  
  <div class="notification" id="notification">
    <div id="notifText">FE Script: Activated <span id="scriptName"></span></div>
    <button class="toggle-button" id="toggleBtn">Toggle Off</button>
  </div>
  
  <script>
    const scripts = {
      "FE_BestHatFling": "https://your-script-source/best-hat-fling.lua",
      "FE_InvisibleFling": "https://your-script-source/invisible-fling.lua",
      "FE_FlyScript": "https://your-script-source/fly-script.lua"
    };
    
    let currentScript = null;
    
    function drag(ev) {
      ev.dataTransfer.setData("text/plain", ev.target.id);
    }
    
    function allowDrop(ev) {
      ev.preventDefault();
    }
    
    function drop(ev) {
      ev.preventDefault();
      let scriptId = ev.dataTransfer.getData("text/plain");
      if (scripts[scriptId]) {
        activateScript(scriptId);
      }
    }
    
    function activateScript(scriptId) {
      currentScript = scriptId;
      const scriptName = scriptId.replace(/_/g, " ");
      document.getElementById('scriptName').textContent = scriptName;
      document.getElementById('notification').classList.add('active');

      fetch(scripts[scriptId])
        .then(response => response.text())
        .then(code => {
          eval(code);
          console.log("Script executed:", scriptName);
        })
        .catch(err => console.error("Failed to load script:", err));
      
      document.getElementById('toggleBtn').textContent = "Toggle Off";
    }
    
    document.getElementById('toggleBtn').addEventListener('click', function() {
      if (currentScript) {
        if (this.textContent === "Toggle Off") {
          console.log("Script disabled:", currentScript);
          this.textContent = "Toggle On";
        } else {
          console.log("Reactivating script:", currentScript);
          activateScript(currentScript);
        }
      }
    });
  </script>
</body>
